{
  "name": "gesture-share",
  "private": true,
  "version": "1.0.0",
  "description": "A desktop application that enables seamless file sharing between your computer and mobile device using intuitive hand gestures powered by MediaPipe and WebRTC.",
  "keywords": [
    "gesture-recognition",
    "file-sharing",
    "mediapipe",
    "webrtc",
    "computer-vision",
    "hand-tracking",
    "react",
    "typescript",
    "peer-to-peer"
  ],
  "author": {
    "name": "Gesture Share Team",
    "email": "contact@gestureshare.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/gesture-share.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/gesture-share/issues"
  },
  "homepage": "https://gestureshare.app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "!**/*.{js,ts,jsx,tsx}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "peerjs": "^1.5.5",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.1",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
